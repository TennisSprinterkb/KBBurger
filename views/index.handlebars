<div class="container text-center">
    <h1>KB Burger Munchie</h1>
    <img id="kbburger" src="/public/assets/img/Burger.jpg">
    <hr>
    <div class="row">
        <div class="col-md-6" class="task">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                <input type="hidden" name="burger_id" type="text"
                    value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">MUNCH IT UP</button>
                </form>
                {{/unless}}
                {{/each}}
        </div>
        <br>
        <div class="col-md-6" class="task">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>


<div class="container text-center">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 enter_section">
            <p>Name a burger in you want to eat!</p>
            <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">Enter</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>